<header>
    <i class="far fa-sticky-note"></i>
    <h1>
        Take notes before you forget!
    </h1>
    <i class="fas fa-plus-circle" title="Add notes!" id="addNote"></i>


</header>

<section id="notes">
    <div class="column"></div>
    <div class="column"></div>
    <div class="column"></div>
    <div class="column"></div>
</section>

<template id="noteTemplate">
    <div>
        <i class="fas fa-times"></i>
        <form action="/:id" method="PUT">
            <textarea name="text"></textarea>
        </form>
    </div>
</template>

